doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/stylesheets/edit_course.css")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" )
        
        title LearnHub | Edit Course
    body
        if courseUpdateMessage
            p.course-update-message #{courseUpdateMessage}

        header#header 
            .left-icon 
                a.logo-link-wrapper(href="/") 
                    |
                    img(src="/img/note-icon.png", alt="", srcset="")
            .search-icon-wrapper
                //- i.fa-solid.fa-magnifying-glass.search-icon
                input.search-input(type='text', placeholder='Search Note', class="search-input")
            .right-btn-wrapper
                p.user-icon-from-first-name A
        #pop-up-message-wrapper
                p#display-pop-up-message
        .course-video-preview-wrapper 
            h1.course-video-heading Course Video: 
            .video-wrapper 
                iframe(id="video_source" width="600" height="400" src="" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen)
        div#confirmation-container
            form(id="update-course-form" method='post', enctype="multipart/form-data")
                input(type='hidden', id='courseId', name='courseId', value=`${courseToEditDisplay.courseId}`)
                label(for='course_title') Course Title:
                input(type='text', id='course_title', name='course_title', value=`${courseToEditDisplay.course_title}`)

                label(for='course_description') Course Description:
                input(type='text', id='course_description', name='course_description', value=`${courseToEditDisplay.course_description}`)
                
                label(for='course_video_url') Course Video URL:
                .course-video-wrapper 
                    input(type='text', id='course_video_url', name='course_video_url', value=`${courseToEditDisplay.course_video_url}`)
                    button(type='button' class="preview-btn") Preview
                
                label(for='course_thumbnail_image') Course Thumbnail Image:
                .course-thumbnail-image-wrapper 
                    if imageFromPc
                        img(src=`/uploads/${imageFromPc}`, class="course_thumbnail_image", alt='Thumbnail Image')
                        input(type="file" name="course_thumbnail_image" id="course_thumbnail_image" accept="image/*" required)
                        
                
                label(for='price') Price:
                input(type='number', id='price', step='0.01', name='price', value=`${courseToEditDisplay.price}`)
                
                label(for="course_category") Course category:
                    select(id="course_category", name="course_category", required)
                        
                        if courseToEditDisplay.course_category
                            option(value=`${courseToEditDisplay.course_category}`, selected, class="selected") #{courseToEditDisplay.course_category}
                            option(value="Website Development") Web Development
                            option(value="Graphic Science") Graphic Design
                            option(value="Data Science") Data Science
                            option(value="Busines") Business
                            option(value="Computer Science") Computer Science
                            option(value="Language") Language
                            option(value="Physical Sciences") Physical Sciences
                            option(value="Social Sciences") Social Sciences
                                        
                label(for='course_language') Course Language:
                input(type='text', id='course_language', name='course_language', value=`${courseToEditDisplay.course_language}`)
            
                div.button-wrapper    
                    button.submit-btn(type='submit') Save Edit
                    button(class="cancel-btn", href="/admin/dashboard") Cancel
        script(src="/js/edit_course.js") 
            

            
